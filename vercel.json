{
  "version": 2,
  "builds": [
    {
      "src": "invoice-app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "dist"
      }
    },
    {
      "src": "backend/src/index.mjs",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/src/index.mjs",
      "methods": ["GET", "HEAD", "PUT", "PATCH", "POST", "DELETE", "OPTIONS"]
    },
    {
      "src": "/assets/(.*)",
      "dest": "/invoice-app/dist/assets/$1"
    },
    {
      "src": "/(.*\\.(ico|png|svg|jpg|jpeg|webmanifest|js|css))$",
      "dest": "/invoice-app/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/invoice-app/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "headers": [
      {
        "source": "/api/(.*)",
        "headers": [
          { "key": "Access-Control-Allow-Origin", "value": "*" },
          { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
          { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" },
          { "key": "Access-Control-Allow-Credentials", "value": "true" }
        ]
      }
  ]
}


